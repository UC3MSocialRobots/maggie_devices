 <launch>
    <arg name="robot" />
    <group ns="$(arg robot)">
        <node name="arm_joint_left" pkg="motor_controller" type="motor_controller_node_main.exe" output="screen">
            <param name="port" type="string" value="left_arm" />
            <param name="joint_name" type="string" value="arm" />
            <param name="joint_id" type="int" value="0" />
        </node>

        <node name="arm_joint_right" pkg="motor_controller" type="motor_controller_node_main.exe" output="screen">
            <param name="port" type="string" value="right_arm" />
            <param name="joint_name" type="string" value="arm" />
            <param name="joint_id" type="int" value="1" />
        </node>
    </group>
</launch>
