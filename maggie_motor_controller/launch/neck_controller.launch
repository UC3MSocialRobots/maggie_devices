<launch>
    <arg name="robot" />
    <group ns="$(arg robot)">
        <node name="neck_joint_horizontal" pkg="motor_controller" type="motor_controller_node_main.exe" output="screen">
            <param name="port" type="string" value="horizontal_neck" />
            <param name="joint_name" type="string" value="neck" />
            <param name="joint_id" type="int" value="0" />
        </node>

        <node name="neck_joint_vertical" pkg="motor_controller" type="motor_controller_node_main.exe" output="screen">
            <param name="port" type="string" value="vertical_neck" />
            <param name="joint_name" type="string" value="neck" />
            <param name="joint_id" type="int" value="1" />
        </node>
    </group>
</launch>
